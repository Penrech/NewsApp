<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ErrorTitle" parent="">
        <item name="android:textColor">@color/softBlack</item>
        <item name="fontFamily">@font/quicksand_semibold</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ErrorDescription" parent="">
        <item name="android:textColor">@color/softerBlack</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/quicksand_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button.Error">
        <item name="backgroundTint">@color/teal_200</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>